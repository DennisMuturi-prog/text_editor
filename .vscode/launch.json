{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(Windows) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/target/debug/text_editor.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceRoot}",
      "environment": [],
      "externalConsole": true,
      "miDebuggerPath": "C:\\Users\\Dennis Muturi\\.rustup\\toolchains\\stable-x86_64-pc-windows-gnu\\bin\\rust-gdb",
    },
    {
      "name": "Debug executable 'text_editor'",
      "type": "lldb",
      "request": "launch",
      "cargo": {
        "args": [
          "build",
          "--bin=text_editor"
        ]
      },
      "program": "${cargo:program}",
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceRoot}/target/debug/text_editor.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/path/to/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Debug Rust (GDB)",
      "type": "cppdbg",
      "request": "launch",
      // Point to your actual compiled .exe
      "program": "${workspaceFolder}/target/debug/text_editor.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      // Replace with your actual path from 'where gdb'
      "miDebuggerPath": "C:\\Users\\Dennis Muturi\\.cargo\\bin\\rust-gdb.exe",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // Ensures the latest code is compiled before debugging starts
      "preLaunchTask": "rust: cargo build"
    }
  ]
}